<script>
    //点击类出来所对应的汽车
    $(document).on("click","#tbody tr th",function(){
        // console.log($(this).html());
        var cont=$(this).html();

        $("#tbody tr th").removeClass("active");
        $(this).addClass("active");

        $.ajax({
            "url":"/classcar/"+cont,
            "type":"post",
            "success":function(data){

                var data=data.result;
                $("#classcar").empty()
                for(var i=0;i<data.length;i++){
                    var rent="";
                    if(data[i].state==false){
                        rent="未租出"
                    }else if(data[i].state==true){
                        rent="已租出"
                    }
                    var n=i+1;
                    var str="<tr><th><input type='radio' name='check' class='gou' data-id='"+data[i]._id+"'></th><th>"+n+"</th><th>"+data[i].name+"</th><th>"+data[i].price+"</th><th>"+rent+"</th></tr>"
                    $("#classcar").append(str);
                }
            }
        })
    })

